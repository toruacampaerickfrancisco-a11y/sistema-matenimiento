{
  "name": "mantenimiento-erp-backend",
  "version": "1.0.0",
  "description": "Backend API para Sistema ERP de Mantenimiento - Secretaría de Bienestar del Estado de Sonora",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "echo 'No build step required for Node.js'",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "run:seeders": "node scripts/run-seeders.mjs",
    "seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:reset": "npm run migrate:undo:all && npm run migrate && npm run seed",
    "db:setup": "npm run db:create && npm run migrate && npm run seed",
    "test": "cross-env NODE_ENV=test DB_DIALECT=sqlite DB_STORAGE=:memory: NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --runInBand --forceExit",
    "test:watch": "cross-env NODE_ENV=test DB_DIALECT=sqlite DB_STORAGE=:memory: NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "keywords": [
    "nodejs",
    "koa",
    "sequelize",
    "postgresql",
    "erp",
    "mantenimiento",
    "api",
    "backend"
  ],
  "author": "Secretaría de Bienestar del Estado de Sonora",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-compress": "^5.1.1",
    "koa-helmet": "^7.0.2",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-multer": "^1.0.2",
    "koa-router": "^12.0.1",
    "koa-static": "^5.0.0",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
